<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.SortNoteActivity"
        android:background="@color/color_background_gray">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/sort_note_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/OverflowMenuStyle"
            app:title="Choose the classification"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sort_note_recycleview"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sort_note_toolbar"
            />


        <Button
            android:id="@+id/add_note_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a new classification"
            android:layout_below="@id/sort_note_recycleview"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorPrimaryDark"
            />


    </RelativeLayout>
</layout>

