<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                  
     

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.AddSortNoteActivity"
        android:background="@color/color_background_gray" android:tag="layout/activity_backup_data_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/backup_data_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/OverflowMenuStyle"
            app:title="Backup data management"
            />

        <RelativeLayout
            android:id="@+id/backup_picture_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backup_data_toolbar"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_pressed_state"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/backup_picture_icon"
                style="@style/linear_item_icon"
                android:src="@mipmap/backup_picture" />

            <TextView
                android:id="@+id/backup_picture_tx"
                style="@style/linear_item_text_behind_icon"
                android:layout_toEndOf="@+id/backup_picture_icon"
                android:text="Clear cached images" />

        </RelativeLayout>

        <View
            android:id="@+id/line"
            style="@style/horizon_line"
            android:layout_below="@+id/backup_picture_layout"
            />


        <RelativeLayout
            android:id="@+id/backup_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:background="@drawable/item_pressed_state"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <ImageView
                android:id="@+id/backup_label_icon"
                android:src="@mipmap/delete_label"
                style="@style/linear_item_icon"
                />

            <TextView
                android:id="@+id/backup_label_tx"
                android:text="Delete event record"
                android:layout_toEndOf="@+id/backup_label_icon"
                style="@style/linear_item_text_behind_icon"
                />

        </RelativeLayout>

        <View
            android:id="@+id/line2"
            style="@style/horizon_line"
            android:layout_below="@+id/backup_label_layout"
            />


        <RelativeLayout
            android:id="@+id/backup_sortnote_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:background="@drawable/item_pressed_state"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <ImageView
                android:id="@+id/backup_sortnote_icon"
                android:src="@mipmap/delete_waring"
                style="@style/linear_item_icon"
                />

            <TextView
                android:id="@+id/backup_sortnote_tx"
                android:text="Delete all Classification"
                android:layout_toEndOf="@+id/backup_sortnote_icon"
                style="@style/linear_item_text_behind_icon"
                />

        </RelativeLayout>

    </RelativeLayout>

         