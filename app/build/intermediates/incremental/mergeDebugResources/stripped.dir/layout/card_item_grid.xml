<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                                             
                 
                        
                                                          
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:padding="6dp"
         android:tag="layout/card_item_grid_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/note_list_future_dark"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:tag="binding_1"     
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/label_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_text"
                    android:background="@color/grid_item_color"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:tag="binding_2"                              
                    android:textColor="@color/color_bold"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/label_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_day"
                    android:background="@color/grid_item_day_color"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:tag="binding_3"                          
                    android:textColor="@color/color_normal"
                    android:textSize="12sp" />



            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>
         



