<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                  
     

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.DarkThemeSettingActivity"
        android:orientation="vertical"
        android:background="@color/color_background_gray" android:tag="layout/activity_dark_theme_setting_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/dark_theme_setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/OverflowMenuStyle"
            app:title="Set Theme"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/follow_system_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_pressed_state"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp">



            <TextView
                android:id="@+id/follow_system_tx"
                android:text="Followe system"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_normal"
                android:text="When enabled, the night mode is enabled or disabled by the system"
                android:layout_below="@id/follow_system_tx"
                android:layout_marginTop="3dp"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/follow_system_switch"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:theme="@style/switchStyle" />

        </RelativeLayout>


        <TextView
            android:id="@+id/choose_theme_tx"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manually"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            />

        <RelativeLayout
            android:id="@+id/dark_theme_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_pressed_state"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <ImageView
                android:id="@+id/dark_theme_icon"
                android:src="@mipmap/dark_theme_icon"
                style="@style/linear_item_icon"
                />

            <TextView
                android:id="@+id/dark_theme_tx"
                android:text="Dark theme"
                android:layout_toEndOf="@+id/dark_theme_icon"
                style="@style/linear_item_text_behind_icon"
                />

            <ImageView
                android:id="@+id/check_dark_theme"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/check"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <View
            style="@style/horizon_line"
            />

        <RelativeLayout
            android:id="@+id/day_theme_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_pressed_state"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <ImageView
                android:id="@+id/day_theme_icon"
                android:src="@mipmap/day_theme_icon"
                style="@style/linear_item_icon"
                />

            <TextView
                android:id="@+id/day_theme_tx"
                android:text="Light theme"
                android:layout_toEndOf="@+id/day_theme_icon"
                style="@style/linear_item_text_behind_icon"
                />

            <ImageView
                android:id="@+id/check_day_theme"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/check"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </LinearLayout>

         